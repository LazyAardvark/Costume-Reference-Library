<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/library">&larr; back to the library</a></p>
				<hr>
				<header>
					<h1>{{data.costume.title}}</h1>
					<h5>
						{{{detachmentList data.costume.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="costume">
					{{#if data.costume.image}}<img src="{{{cloudinaryUrl data.costume.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
					{{{data.costume.content.extended}}}
				</div>
			</article>
		</div>
	</div>
</div>
